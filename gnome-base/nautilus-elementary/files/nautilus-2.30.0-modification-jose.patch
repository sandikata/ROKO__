+		}
+		else{
+			position_space= -1;
+		}
+
+		//small space
+		gtk_toolbar_insert (GTK_TOOLBAR (toolbar), item, position_space);
+		//large space
+		if(space_after_breadcrumbs > 1 ){
+			gtk_toolbar_insert (GTK_TOOLBAR (toolbar), item, position_space);
+			gtk_toolbar_insert (GTK_TOOLBAR (toolbar), item, position_space);
+			gtk_toolbar_insert (GTK_TOOLBAR (toolbar), item, position_space);
