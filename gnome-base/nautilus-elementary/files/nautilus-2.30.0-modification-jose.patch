+/***********************************************************************************************/
+/* Update zoom slider to the zoom level of the pane
+/***********************************************************************************************/
+void
+zoom_slider_update_value (NautilusWindow *window)
+{
+	NautilusWindowSlot *slot;
+	NautilusZoomLevel zoom_level;
+
+	g_assert (window != NULL);
+
+	slot = window->details->active_pane->active_slot;
+
+	if (slot->content_view != NULL && NAUTILUS_NAVIGATION_WINDOW (window)->details->zoom_slider != NULL) {
+		zoom_level = nautilus_view_get_zoom_level (slot->content_view);
+		gtk_range_set_value (NAUTILUS_NAVIGATION_WINDOW (window)->details->zs_range, zoom_level);
+	}
+}
+
+void
+zoom_slider_value_changed (NautilusWindow *window)
+{
+	NautilusWindowSlot *slot;
+	NautilusZoomLevel zoom_level;
+
+	g_assert (window != NULL);
+
+	slot = window->details->active_pane->active_slot;
+
+	if (slot->content_view != NULL) {
+	    zoom_level = (NautilusZoomLevel) gtk_range_get_value
+            (NAUTILUS_NAVIGATION_WINDOW (window)->details->zs_range);
+	    nautilus_view_zoom_to_level (slot->content_view, zoom_level);
+    }
+}
