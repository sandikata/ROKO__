+/* This function create the zoom sliders, all credit for the implementation of the sliders goes
+/* to the elementary team, I only copy the code and adapted to the nautilus 2.30
+/***********************************************************************************************/
+static GtkWidget *
+create_zoom_slider_widget_for_view (NautilusNavigationWindow *window)
+{
+	GtkWidget *box, *scale;
+	GtkWidget *zoom_in_image, *zoom_in_event_box;
+	GtkWidget *zoom_out_image, *zoom_out_event_box;
+
+	box = gtk_hbox_new (FALSE, 0);
+
+	if (eel_preferences_get_boolean (NAUTILUS_PREFERENCES_SHOW_ZOOM_SLIDER_ICONS))
+	{
+		zoom_in_image = gtk_image_new_from_stock (GTK_STOCK_ZOOM_IN, GTK_ICON_SIZE_MENU);
+		zoom_in_event_box = gtk_event_box_new ();
+	
+		gtk_container_add (GTK_CONTAINER (zoom_in_event_box), zoom_in_image);
+		g_signal_connect_object (G_OBJECT (zoom_in_event_box), "button-press-event", 
+					 G_CALLBACK (nautilus_window_zoom_in), window, G_CONNECT_SWAPPED);
+
+		zoom_out_image = gtk_image_new_from_stock (GTK_STOCK_ZOOM_OUT, GTK_ICON_SIZE_MENU);
+		zoom_out_event_box = gtk_event_box_new ();
+		    gtk_container_add (GTK_CONTAINER (zoom_out_event_box), zoom_out_image);
+		    
+		g_signal_connect_object (G_OBJECT (zoom_out_event_box), "button-press-event", 
+			         G_CALLBACK (nautilus_window_zoom_out), window, G_CONNECT_SWAPPED);
+	}
+
+	scale = gtk_hscale_new_with_range (NAUTILUS_ZOOM_LEVEL_SMALLEST, NAUTILUS_ZOOM_LEVEL_LARGEST, 1);
+	window->details->zs_range = GTK_RANGE(scale);
+	
+	if (eel_preferences_get_boolean (NAUTILUS_PREFERENCES_SHOW_ZOOM_SLIDER_ICONS))
+	    gtk_widget_set_size_request (scale, 100, -1); /* This is arbitrary */
+	else
+	    gtk_widget_set_size_request (scale, 110, -1); /* This is arbitrary */
+	    
+	gtk_scale_set_draw_value (GTK_SCALE (scale), FALSE);
+	gtk_scale_set_digits (GTK_SCALE (scale), 0);
+	g_object_set (scale, "update-policy", GTK_UPDATE_CONTINUOUS, NULL);
+	g_signal_connect_object (scale, "value-changed", G_CALLBACK (zoom_slider_value_changed), window, G_CONNECT_SWAPPED);
+
+
+	if (eel_preferences_get_boolean (NAUTILUS_PREFERENCES_SHOW_ZOOM_SLIDER_ICONS))
+	    gtk_box_pack_end (GTK_BOX (box), zoom_in_event_box, FALSE, FALSE, 0);
+	gtk_box_pack_end (GTK_BOX (box), scale, TRUE, TRUE, 0);
+	
+	if (eel_preferences_get_boolean (NAUTILUS_PREFERENCES_SHOW_ZOOM_SLIDER_ICONS))
+	    gtk_box_pack_end (GTK_BOX (box), zoom_out_event_box, FALSE, FALSE, 0);
+
+	gtk_widget_show_all (box);
+
+	return box;
+}
