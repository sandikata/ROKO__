+	if( space_after_breadcrumbs > 0 ){
+		hbox = gtk_hbox_new (FALSE, 0);
+		gtk_widget_set_size_request (hbox, 100, -1);
+	
+		item = gtk_tool_item_new ();
+		gtk_container_set_border_width (GTK_CONTAINER (item), 4);
